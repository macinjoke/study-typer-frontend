{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-console": 1,
    "semi": 0,
    "arrow-parens": 0,
    "object-curly-newline": 0
  }
}
